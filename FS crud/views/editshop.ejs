<body>

    <%- include('includes/head.ejs') %>
    <main>
        <form class="product-form" >
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" value="<%= prods.title %>" id="title">
            </div>
            <div class="form-control">
                <label for="title">Image URL</label>
                <input type="text" name="imageurl" value="<%= prods.imageUrl%>" id="imageurl">
            </div>
            <div class="form-control">
                <label for="title">Price</label>
                <input type="text" name="price" id="price" value="<%= prods.price%>">
            </div>
            <div class="form-control">
                <label for="title">Description</label>
                <textarea  name="desc" id="desc" rows="5"><%= prods.description %></textarea>
            </div>
            <form action="/edit-product/:productID" method="POST">
                <input type="hidden" value="<%= prods.id%>" name="productID"> 
                <button class="btn" type="submit">Edit Product</button>
            </form>

          
        </form>
    </main>
</body>

</html>